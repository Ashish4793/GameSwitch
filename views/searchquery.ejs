<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameSwitch</title>
    <link rel="shortcut icon" href="/switch.png" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu+Mono&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/3ea55f06b5.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</head>
<body>
  <nav style="background-color: black;" class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
            <a style="color: #3C79F5; font-weight: bold;" class="navbar-brand" href="/">
        <img src="switch.png" alt="Logo" width="30" height="22" class="d-inline-block align-text-top">
        GameSwitch
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div style="margin-right: 80px;" class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/"><i class="fa-solid fa-house"></i></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/search"><i class="fa-solid fa-magnifying-glass"></i></a>
          </li>
          <li style="margin-right: 1rem;" class="nav-item dropdown">
            <a class="nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-user"></i>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/orders"><i style="margin-right: 5px;" class="fa-solid fa-bag-shopping"></i>My Orders</a></li>
              <li><a class="dropdown-item" href="/profile"><i style="margin-right: 5px;" class="fa-regular fa-user"></i>My Profile</a></li>
              <li><a class="dropdown-item" href="/logout"><i style="margin-right: 5px;" class="fa-solid fa-right-from-bracket"></i>Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container text-center">
    <h1 style="margin-bottom: 3rem; margin-top: 3rem; font-weight: bolder; color: #3C79F5" class="display-1">GameSwitch</h1>
    <% if(hot===false){ %>
        <h1 style="margin-bottom: 5vh;">No Results Found!</h1>
    <% } else { %>
        <h1 style="margin-bottom: 5vh;">Results Found!</h1>
    <% } %>
    <div class="row">
        <% foundGames.forEach(function(game){ %>
            <div style="margin-bottom: 30px;" class="col-md-3">
                <div class="card h-100" style="width: 15rem;">
                    <img src="<%= game.gameCover %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <form action="/addtocart" method="POST">
                        <input type="hidden" value="<%= game._id %>" name="hue">
                        <h5 name="title" class="card-title"><%= game.gameName %></h5>
                        <p name="price" lass="card-text">&#8377;<%= game.gamePrice %></p>
                        <% if (auth===true) { %>
                            <button type="submit" onclick="myFunction()" class="btn btn-dark">Add to cart</button>
                        <%   } else { %>
                            <button type="submit" class="btn btn-dark">Add to cart</button>
                        <%  } %>
                      </form>
                    </div>
                </div>
            </div>
            <% }); %>  
</div>
</div>

<script>
function myFunction(){
  Swal.fire({
    type: 'success',
    icon : 'success',
    title: 'Success!',
    confirmButtonText: 'Ok',
    text: 'Game has been added to cart',
    footer: '',
})
.then(function (result) {
    if (result.value) {
        window.location = "/";
    }
})
};

</script>
</body>
</html>